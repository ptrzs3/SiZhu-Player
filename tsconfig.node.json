{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES6"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
}
